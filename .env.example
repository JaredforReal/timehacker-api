# TimeHacker 后端环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 应用配置
ENVIRONMENT=production
DEBUG=false

# 数据库配置
# Docker Compose 内部连接
DATABASE_URL=postgresql+asyncpg://timehacker:your_password@postgres:5432/timehacker
# 本地开发时使用
# DATABASE_URL=postgresql+asyncpg://timehacker:your_password@localhost:5432/timehacker
POSTGRES_PASSWORD=your_secure_postgres_password

# JWT 配置
# 请生成一个安全的随机密钥: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_very_secure_secret_key_here_use_random_64_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# 腾讯云 COS 配置（用于头像上传）
COS_SECRET_ID=your-cos-secret-id
COS_SECRET_KEY=your-cos-secret-key
COS_BUCKET=your-bucket-name-1234567890
COS_REGION=ap-guangzhou

# 服务器配置
PORT=8000
HOST=0.0.0.0
WORKERS=4

# 域名配置
API_DOMAIN=api.my-domain.com
FRONTEND_DOMAIN=my-domain.com
ALLOWED_ORIGINS=https://my-domain.com,https://www.my-domain.com

# CORS配置
CORS_ALLOWED_ORIGINS=["https://my-domain.com", "https://www.my-domain.com"]
